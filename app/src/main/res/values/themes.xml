<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppConParse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#8F9491</item> <!-- Fondo principal -->
        <item name="colorPrimaryVariant">#BCA3AC</item> <!-- Variante de fondo -->
        <item name="colorOnPrimary">@color/white</item> <!-- Texto sobre fondo -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#BCA3AC</item> <!-- Color secundario -->
        <item name="colorSecondaryVariant">#8F9491</item> <!-- Variante secundaria -->
        <item name="colorOnSecondary">@android:color/black</item> <!-- Texto sobre color secundario -->
        <item name="android:fontFamily">@font/alata</item> <!-- Fuente global -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Color de la barra de estado -->
        <!-- Customize your theme here. -->
    </style>

    <!-- Rounded ImageView style -->
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Navigation View Theme Overlay -->
    <style name="ThemeOverlay.App.BottomNavigationView" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#8F9491</item> <!-- Color del fondo del bottom navigation -->
        <item name="colorOnPrimary">@android:color/white</item> <!-- Color del texto sobre fondo -->
    </style>

    <!-- App theme reference -->
    <style name="Theme.AppConParse" parent="Base.Theme.AppConParse" />

    <style name="Theme.MyApp" parent="Theme.Material3.DayNight">
        <!-- Fuente global -->
    </style>

    <style name="TextAppearance.ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textColor">@android:color/black</item> <!-- Color del texto del tÃ­tulo en el toolbar -->
    </style>
</resources>
